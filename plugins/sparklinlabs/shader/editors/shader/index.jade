doctype html
html
  head
    link(rel="stylesheet",href="/styles/reset.css")
    link(rel="stylesheet",href="/styles/perfectResize.css")
    link(rel="stylesheet",href="/styles/treeView.css")
    link(rel="stylesheet",href="/styles/dialogs.css")
    link(rel="stylesheet",href="../../../textEditorWidget/widget/index.css")
    link(rel="stylesheet",href="index.css")

  body
    .top
      .left
        .uniforms
          .header
            .info= t("shaderEditor:uniforms")
            .settings
              input#use-light-uniforms(type="checkbox")
              label(for="use-light-uniforms")= t("shaderEditor:useLights")
          .list
            table
              tr
                th= t("shaderEditor:name")
                th= t("shaderEditor:type")
                th= t("shaderEditor:value")
              tr.immutable
                td time
                td f
                td 0
              tr.new
                td
                  input(type="text",placeholder= t("shaderEditor:newUniform"))
                td
                td

        .attributes
          .header
            .info= t("shaderEditor:attributes")
          .list
            table
              tr
                th= t("shaderEditor:name")
                th= t("shaderEditor:type")
                th= t("shaderEditor:value")
              tr.new
                td
                  input(type="text",placeholder= t("shaderEditor:newAttribute"))
                td
                td

      .preview
        .header
          .info= t("shaderEditor:preview")
          .settings
            select
              option= t("shaderEditor:plane")
              option= t("shaderEditor:box")
              option= t("shaderEditor:sphere")
              option= t("shaderEditor:asset")
            input.preview-asset-path(type="text",placeholder= t("shaderEditor:assetPath"),hidden)
        canvas(tabindex="0")

    .shaders
      .vertex
        .header
          button(title="Ctrl+S",hidden)= t("common:actions.applyChanges")
          .info= t("shaderEditor:vertexShader")
        .text-editor-container
          textarea(disabled).text-editor
      .fragment
        .header
          button(title="Ctrl+S",hidden)= t("common:actions.applyChanges")
          .info= t("shaderEditor:fragmentShader")
        .text-editor-container
          textarea(disabled).text-editor

    script(src="/SupCore.js")
    script(src="../../../../../SupEngine.js")
    script(src="/SupClient.js")
    script(src="../../data.js")
    script(src="../../components.js")
    script(src="../../../textEditorWidget/data.js")
    script(src="../../../textEditorWidget/widget/index.js")
    script(src="../../../textEditorWidget/codemirror/mode/clike/clike.js")
    script(src="../../../sprite/data.js")
    script(src="../../../sprite/components.js")
    script(src="../../../model/data.js")
    script(src="../../../model/components.js")
    script(src="index.js")
